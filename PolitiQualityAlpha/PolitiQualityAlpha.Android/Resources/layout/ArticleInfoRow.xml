
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:orientation="horizontal"
               >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:background="@drawable/layoutborder"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoGuardian"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/the_guardian_icon"
                android:layout_marginTop="10dp" 
                local:MvxBind="Visibility ImageVisiblity(GuardianLogoVisibility)"
               
                 />

            <ImageView
                android:id="@id/cnnLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/cnn_icon"
                android:layout_marginTop="10dp" 
                local:MvxBind="Visibility ImageVisiblity(CnnLogoVisibility)"
               
                 />
            
            <ImageView
                android:id="@+id/bbcLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/bbc_icon"
                android:layout_marginTop="10dp" 
                local:MvxBind="Visibility ImageVisiblity(BbcLogoVisibility)"
               
                 />

              
            <TextView
                          
                android:layout_width="100dp"
                android:layout_height="50dp"
                   android:layout_below="@id/cnnLogo"/>


            <TextView
                android:id="@+id/journalistNameCnn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:textSize="12dp"
                android:layout_marginTop="60dp"
                local:MvxBind="Text Author"
                android:layout_alignParentLeft="false"
             />

         
         


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textLink"
              android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="12dp"
                android:text="Link to article"
                android:layout_marginRight="15.5dp"
                android:layout_marginBottom="0.0dp" 
                />
            <Button
                android:id="@+id/linkToArticle"
                android:layout_width="100dp"
                android:layout_height="30dp"
         
                android:layout_alignParentRight="true"
              android:layout_below="@+id/textLink"
                local:MvxBind="Click ArticleLink"
                
        />

            <TextView
                android:id="@+id/votingMessage"
                android:layout_width="78.0dp"
                android:layout_height="wrap_content"
                android:text="Vote here"
                android:gravity="center"
                android:layout_toRightOf="@+id/logo"
                android:layout_marginStart="115dp"
                android:textStyle="bold"
                />

            <ImageButton
                android:id="@+id/upVoteArticle"
                android:layout_below="@+id/votingMessage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:layout_toLeftOf="@+id/downVoteArticle"
                android:src="@drawable/thumbsup"
                local:MvxBind="Click UpVote; BackgroundColor UpVoteColourBackground(UpVoteBackgroundColourToggle)"   />

            <ImageButton
                android:id="@+id/downVoteArticle"
                android:layout_below="@+id/votingMessage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
               android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                local:MvxBind="Click DownVote;  BackgroundColor DownVoteColourBackground(DownVoteBackgroundColourToggle)"
                android:src="@drawable/thumbsdown"
                android:layout_marginRight="125dp" 
        />

            <TextView
                android:id="@+id/publisherUpVotes"
                android:layout_below="@+id/upVoteArticle"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@android:color/holo_green_dark"
                local:MvxBind="Text UserUpVotes"
                android:layout_marginLeft="115dp" />
            <TextView
                android:id="@+id/publisherDownVotes"
                android:layout_below="@+id/downVoteArticle"
                android:layout_toRightOf="@+id/publisherUpVotes"
                android:layout_width="50dp"
                 android:gravity="center"
                  local:MvxBind="Text UserDownVotes"
                android:layout_height="30dp"
                android:background="@android:color/holo_red_dark"
               />



        </RelativeLayout>



    </RelativeLayout>


</LinearLayout>